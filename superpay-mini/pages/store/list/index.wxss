/* pages/store/apply/list/index.wxss */
.store-entry {
    padding: 16rpx;
    padding-bottom: 120rpx;
    box-sizing: border-box;
}

.store-entry-list {
    background: #fff;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
}

.store-entry-list-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 12rpx;
}

.name {
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.state {
    font-size: 28rpx;
}

.state-pending {
    color: #f7b500;
}

.state-approved {
    color: #6dd400;
}

.state-rejected {
    color: #ff3b30;
}

.store-entry-list-numbers,
.store-entry-list-time {
    font-size: 26rpx;
    color: #666;
    margin-top: 8rpx;
}

.store-entry-list-btn {
    margin-top: 12rpx;
}

.btn-see-reason {
    font-size: 24rpx;
    color: #0091ff;
    border: 1rpx solid #0091ff;
    padding: 6rpx 16rpx;
    border-radius: 8rpx;
    text-align: center;
}

.add-btn {
    position: fixed;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 660rpx;
    height: 82rpx;
    background: #f02230;
    color: #fff;
    text-align: center;
    line-height: 82rpx;
    border-radius: 14rpx;
    font-size: 32rpx;
}

.state-pending {
    color: #f7b500;
}

.state-approved {
    color: #6dd400;
}

.state-rejected {
    color: #ff3b30;
}